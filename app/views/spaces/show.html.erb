<div class="container">
  <div class="two_columns">
        <% if @space.images? %>
          <div class="card" style="background-image: url(<%= cl_image_path(@space.images.path) %>); width: 200px; height: 300px, crop: :fill ; ">
          </div>
           <% else %>
        <div class="card-header" style="background-image: url(); height: 200px;">
        </div>
        <% end %>
      <div class="card-contents" style = "top:50px; width:50vw">
        <h1><%= @space.name %></h1>
        <p><%= @space.category %></p>
        <p>cap:<%= @space.capacity %></p>
        <p><%= @space.description %></p>
        <div style="font-size:30px; padding:15px;">
          <%= link_to 'Inquire', new_space_event_path(@space) %>|
          <%= link_to 'Edit', edit_space_path(@space) %>|
          <%= link_to 'Back', spaces_path %>
     </div>
  </div>
</div>
</div>

<div id="map" style="width: 100%; height: 300px; margin:auto;">


<% content_for(:after_js) do %>
<%= javascript_tag do %>
$(document).ready(function() {
var handler = Gmaps.build('Google');
handler.buildMap({ provider: {scrollwheel: false}, internal: { id: 'map' } }, function() {
markers = handler.addMarkers(<%= raw @hash.to_json %>);
console.log(<%= raw @hash.to_json %>);
handler.bounds.extendWith(markers);
handler.fitMapToBounds();

if (markers.length == 0) {
handler.getMap().setZoom(2);
} else if (markers.length == 1) {
handler.getMap().setZoom(14);
}
});
});
<% end %>
<% end %>
</div>
