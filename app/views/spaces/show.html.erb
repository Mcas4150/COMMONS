<div class="slider">
  <% @space.images.each do |image| %>
     <div>
      <%= cl_image_tag(image.path, {:width => 1500, :height => 550, crop: :fill}) %>
     </div>
  <% end %>
</div>
<%= link_to 'Edit', edit_space_path(@space), class:"btn btn-primary btn-lg main-btn main-btn-small" %>
<div class="container flex-container">
  <div class="card card-large">
    <h2> <%= @space.name %></h2>
      <div class="icons-text">
      <div class="icon">
        <p>Starting Price</p>
        <div>
          <i class="fa fa-usd fa-3x center-block" aria-hidden="true"></i>
          <h3><%= @space.price %></h3>
        </div>
      </div>
      <div class="icon">
      <p>Max Capacity</p>
      <div>
        <i class="fa fa-users fa-3x center-block" aria-hidden="true"></i>
        <h3><%= @space.capacity %></h3>
      </div>

      </div>
      <div class="icon">
      <p>Noise Restrictions</p>
      <div>
        <i class="fa fa-volume-up fa-3x" aria-hidden="true"></i>
        <h3><%= @space.noise %></h3>
      </div>

      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row padded">
    <div class="col-sm-6">
      <div class="card auto-width auto-height event-card" >
        <h3> <strong>Address:</strong> <%=@space.address %></h3>
        <h3> <strong> Description:</strong> <%= @space.description %></h3>
        <div class="function">
          <%= link_to 'Inquire', new_space_event_path(@space), class:"btn btn-primary btn-lg main-btn main-btn-small" %>
          <% if @space.user == current_user %>
            <%= link_to 'Edit', edit_space_path(@space), class:"btn btn-primary btn-lg main-btn main-btn-small" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div id="map" class= "curvy"></div>
    </div>
  </div>
</div>




