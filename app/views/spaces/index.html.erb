<div class="banner">
  <div class="banner-content sweet">
    <div class="branding">
      <%= image_tag "logo_white.png" %>
      <h1>Commons</h1>
    </div>
  </div>
</div>

<div class="tabs">
  <% if params[:category] == "Venue" %>
    <%= link_to "All", spaces_path, {class: "tab", datatab: "tab-1"} %>
    <%= link_to "Venue", spaces_path(category:"Venue"), {class: "tab active", datatab: "tab-2"} %>
    <%= link_to "Working Space", spaces_path(category:"Working-Space"), {class: "tab", datatab: "tab-3"} %>
    <%= link_to "Other", spaces_path(category:"Other"), {class: "tab", datatab: "tab-4"} %>
  <% elsif params[:category] == "Working-Space" %>
    <%= link_to "All", spaces_path, {class: "tab", datatab: "tab-1"} %>
    <%= link_to "Venue", spaces_path(category:"Venue"), {class: "tab", datatab: "tab-2"} %>
    <%= link_to "Working Space", spaces_path(category:"Working-Space"), {class: "tab active", datatab: "tab-3"} %>
    <%= link_to "Other", spaces_path(category:"Other"), {class: "tab", datatab: "tab-4"} %>
  <% elsif params[:category] == "Other" %>
    <%= link_to "All", spaces_path, {class: "tab", datatab: "tab-1"} %>
    <%= link_to "Venue", spaces_path(category:"Venue"), {class: "tab", datatab: "tab-2"} %>
    <%= link_to "Working Space", spaces_path(category:"Working-Space"), {class: "tab", datatab: "tab-3"} %>
    <%= link_to "Other", spaces_path(category:"Other"), {class: "tab active", datatab: "tab-4"} %>
    <% else %>
    <%= link_to "All", spaces_path, {class: "tab active", datatab: "tab-1"} %>
    <%= link_to "Venue", spaces_path(category:"Venue"), {class: "tab", datatab: "tab-2"} %>
    <%= link_to "Working Space", spaces_path(category:"Working-Space"), {class: "tab", datatab: "tab-3"} %>
    <%= link_to "Other", spaces_path(category:"Other"), {class: "tab", datatab: "tab-4"} %>
    <% end %>
</div>


  <div class="spaces-display">
    <% @spaces.each do |space| %>
      <div>
         <%= link_to space_path(space) do %>
          <div class="card">
            <% if space.images? %>
              <div class="card-image" style="background-image: url('<%= cl_image_path(space.images.last.path) %>');" ></div>
            <% else %>
              <div class="card-image" style="background-image: url('<%= image_path('montreal.JPG') %>');" ></div>
              <% end %>
            <div class="card-body" style="font-size:30px; height:200px; width:200px">
              <h2><%= space.name %></h2>
              <p><%= space.category %></p>

            </div>
          </div>
        <% end %>
      </div>
      <% end %>
  </div>



<div class="text-center padded">
  <%= link_to "Add a Space", new_space_path, class: "btn btn main-btn" %>
</div>

<%= content_for(:after_js) do %>
  <script>
    $(document).ready(function(){

    $('.tabs a').click(function(){
        var tab_id = $(this).attr('datatab');

        $('.tabs a').removeClass('current');

        $(this).addClass('current');
    })
})
  </script>
<% end %>

