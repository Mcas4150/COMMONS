<div class="banner" style="background-image: linear-gradient(135deg, rgba(249,252,247,1) 0%,rgba(249,252,247,0.99) 1%,rgba(249,252,247,0.86) 25%,rgba(245,249,241,0.5) 93%,rgba(245,249,240,0.5) 100%), url('https://static.pexels.com/photos/242236/pexels-photo-242236.jpeg');">
  <div class="banner-content sweet" style="color:#4C4C4C">


    <div class="branding">
      <%= image_tag "Slice1.png" %>
      </div>

  <div class="dropdown">
    <button class="btn btn-cool dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">Find a Space!
    <span class="caret"></span></button>
    <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
      <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Venues</a></li>
      <li role="presentation" class="divider"></li>
      <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Workspaces</a></li>
    </ul>
  </div>
  </div>
  </div>



  <div class="spaces-display">
    <% @spaces.each do |space| %>
      <div>
         <%= link_to space_path(space) do %>
          <% if space.images? %>
              <div class="card" style="background-image: url(<%= cl_image_path(space.images.path) %>);">
              </div>
               <% else %>
            <div class="card-header" style="background-image: url(); height: 200px;">
            </div>
            <% end %>
          <div class="card-body" style="font-size:30px;">
            <h2><%= space.name %></h2>
            <p><%= space.price %></p>
          </div>
        <% end %>
      </div>
      <% end %>
  </div>



<div class="text-center padded">
  <%= link_to "Add a Space", new_space_path, class: "btn btn-cool" %>
</div>
