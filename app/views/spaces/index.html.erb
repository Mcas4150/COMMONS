<div class="banner" style="background-image: linear-gradient(135deg, rgba(249,252,247,1) 0%,rgba(249,252,247,0.99) 1%,rgba(249,252,247,0.86) 25%,rgba(245,249,241,0.5) 93%,rgba(245,249,240,0.5) 100%), url('https://static.pexels.com/photos/242236/pexels-photo-242236.jpeg');">
  <div class="banner-content sweet" style="color:#4C4C4C">

    <h1>Commons</h1>
     <form action="" class="navbar-wagon-search">
      <input type="text" class="navbar-wagon-search-input" placeholder="Find your Space" style="color:#8BB8A8">
      <button type="submit" class="navbar-wagon-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form>

  </div>
</div>




  <div class="spaces-display">
    <% @spaces.each do |space| %>
      <div>
         <%= link_to space_path(space) do %>

          <div class="card-body" style="font-size:30px;">
            <h2><%= space.name %></h2>
            <p><%= space.price %></p>
          </div>
        <% end %>
      </div>
      <% end %>
  </div>


<div class="text-center padded">
  <%= link_to "Add a Space", new_space_path, class: "btn btn-cool" %>
</div>
