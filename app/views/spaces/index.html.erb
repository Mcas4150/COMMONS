<div class="banner">
  <div class="banner-content sweet">


    <div class="branding">
      <%= image_tag "logo_white.png" %>
      <h1>Commons</h1>
    </div>

    <div class="buttons">
      <%= button_to "Find a Space", spaces_path, {class: "btn button"} %>
    </div>

  </div>
</div>



  <div class="spaces-display">
    <% @spaces.each do |space| %>
      <div>
         <%= link_to space_path(space) do %>
          <% if space.images? %>
              <div class="card" style="background-image: url(<%= cl_image_path(space.images.last.path) %>);">
              </div>
               <% else %>
            <div class="card-header" style="background-image: url(); height: 200px;">
            </div>
            <% end %>
          <div class="card-body" style="font-size:30px;">
            <h2><%= space.name %></h2>
            <p><%= space.category %></p>
            <p><%= space.price %></p>
          </div>
        <% end %>
      </div>
      <% end %>
  </div>



<div class="text-center padded">
  <%= link_to "Add a Space", new_space_path, class: "btn btn-cool" %>
</div>
