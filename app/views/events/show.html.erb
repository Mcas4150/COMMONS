
 <h1><%= @event.name %></h1>




 <h2>
 <%= pluralize @event.messages.size, "message" %>
 </h2>

<div id="messages">
  <% if @event.messages.blank? %>
    leave a message for <%= @event.name %>
  <% else %>
    <% @event.messages.each do |message| %>
      <%= render 'messages/show', message: message %>
    <% end %>
  <% end %>
</div>

<%= render 'messages/form', event: @event, message: Message.new%>

 <h2>
 <%= pluralize @event.reviewevents.size, "review" %>
 </h2>

<div id="reviews">
  <% if @event.reviewevents.blank? %>
    Be the first to leave a review for <%= @event.name %>
  <% else %>
    <% @event.reviewevents.each do |review| %>
      <%= render 'reviewevents/show', reviewevent: review %>
    <% end %>
  <% end %>
</div>

<h1>Pay for your event</h1>
<%= form_tag booking_payments_path(@event.booking) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@event.booking.amount) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="Pay for my event"
    data-email="<%= current_user.email %>"
    data-description="Booking for <%= @event.booking.spaces_sku %>"
    data-amount="<%= @event.booking.amount_cents %>"
    data-currency="<%= @event.booking.amount.currency %>"></script>
<% end %>

<%= render 'reviewevents/form', event: @event, reviewevent: Reviewevent.new%>



        <%= link_to 'Edit', edit_event_path(@event), class:"btn btn-primary btn-lg"%>

 <%= link_to 'Back', events_path, class:"btn btn-primary btn-lg" %>
