<div class="form-wrapper">
<%= simple_form_for [@space, @event] do |f| %>
  <%# f.hidden_field :record_id, value: @record.id %>

  <h2><%= @space.name %></h2>
  <p><%= @space.category %></p>
  <p><%= @space.description %></p>
  <p>$<%= @space.price %></p>
  <%= f.text_field :from, event: [:day, :month, :year],class: "datepicker", :placeholder => 'Rental date' %>
  <br/>
  <%= f.text_field :to, event: [:day, :month, :year],class: "datepicker", :placeholder => 'Return date' %>
  <br/>
  <br/>
  <%= f.submit "Confirm Event", class: "btn btn-cool" %>
  <%= link_to 'Back', spaces_path %>
<% end %>
</div>
