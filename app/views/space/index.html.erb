<h1>Space#index</h1>
<p>Find me in app/views/space/index.html.erb</p>






  <div class="spaces-display">
    <% @spaces.each do |record| %>
      <div>
        <%= link_to space_path(space) do %>
          <% if space.images? %>
            <div class="card" style="background-image: url(<%= cl_image_path(space.photo.path) %>);">
            </div>
          <% else %>
            <div class="card-header" style="background-image: url(http://design-ec.com/d/e_others_50/l_e_others_500.png); height: 200px;">
            </div>
          <% end %>
          <div class="card-body" style="font-size:30px;">
            <h2><%= space.name %></h2>
            <p><%= space.price %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>


<div class="text-center padded">
  <%= link_to "Add a Space", new_space_path, class: "btn btn-cool" %>
</div>
